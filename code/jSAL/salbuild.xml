<?xml version="1.0"?>
<!--
Build file for jSAL
-->

<project name="jSAL" default="package-all">
    <!-- Initialize variables used by multiple targets -->
    <target name="init">
    	<property environment="env"/>
    	<property name="src.dir"        value="srcJava" />
    	<property name="omgddsjar"      value="../omgdds/lib/omgdds.jar"/>
        <property name="class.dir"      value="class" />
        <property name="lib.dir"        value="lib" />
        <property name="jar.file"       value="${lib.dir}/jSAL.jar" />
        <property name="src.zipfile"    value="${lib.dir}/jSAL_src.zip" />
    	<property name="classpath" value="${src.dir}:${env.OSPL_HOME}/jar/dcpssaj.jar:${env.OSPL_HOME}/jar/dcpscj.jar:${omgddsjar}"/>
    	
    	<property name="examplesrc.dir"        value="srcJavaExample" />
    	<property name="examplesrcgen.dir"     value="srcJavaExampleGen" />
        <property name="exampleclass.dir"      value="exampleclass" />
        <property name="examplejar.file"       value="${lib.dir}/example.jar" />
    </target>

    <!-- Remove files from staging areas -->
    <target name="clean" depends="init">
        <delete dir="${class.dir}" />
        <delete dir="${lib.dir}" />
        <delete dir="${exampleclass.dir}" />
    </target>

    <!-- Build jar file of compiled sources -->
    <target name="build-jar" depends="init">
        <!-- Clean destination directory -->
        <delete dir="${class.dir}" />
        <mkdir dir="${class.dir}" />
    	
        <!-- Compile Java sources -->
        <javac fork="yes"
               compiler="javac1.5"
               source="1.5"
               target="1.5"
               debug="false"
               deprecation="true"
               optimize="true"
               srcdir="${src.dir}"
               destdir="${class.dir}"
               excludes="**/CVS/*"
               classpath="${classpath}"
        />

        <!-- Include license and copyright information -->
        <copy todir="${class.dir}">
            <fileset dir=".">
                <include name="LICENSE" />
            </fileset>
        </copy>

        <!-- Create JAR file -->
        <mkdir dir="${lib.dir}" />
        <jar basedir="${class.dir}"
             destfile="${jar.file}"
        />
    </target>

    <!-- Build jar file of compiled sources -->
    <target name="build-example" depends="init">
        <!-- Clean destination directory -->
        <delete dir="${exampleclass.dir}" />
        <mkdir dir="${exampleclass.dir}" />
        <delete dir="${examplesrcgen.dir}" />
        <mkdir dir="${examplesrcgen.dir}" />
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera-subsystems-init-v1.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_BEE_biases.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_BEE_clocks.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_BEE_thermal.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_CALSYS.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_CCS.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_FCS.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_GAS.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_LASERCAL.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_PWR.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_QA_measured.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_SCS.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_SDS_amplifiers.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_SDS_status.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_TCM.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_TC_control.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_TC_zone1.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_TC_zone2.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_TC_zone3.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_TC_zone4.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_TC_zone5.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_TC_zone6.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_UTIL.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_VCS.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_WDS_wfsRaft.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/camera_WTCM.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m1m3-subsystems-init.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m1m3_ActuatorSample.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m1m3_Actuators.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m1m3_Application.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m1m3_Electrical.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m1m3_LUT.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m1m3_LimitSensors.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m1m3_Metrology.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m1m3_Supports.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m1m3_TC.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m2-subsystems-init.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m2_Application.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m2_Electrical.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m2_Hexapod.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m2_LimitSensors.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m2_Metrology.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m2_TC.idl"/>
		<exec command="idlpp -S -l java -d ${examplesrcgen.dir} resources/m2_actuators.idl"/>

        <!-- Compile Java sources -->
        <javac fork="yes"
               compiler="javac1.5"
               source="1.5"
               target="1.5"
               debug="false"
               deprecation="true"
               optimize="true"
               srcdir="${examplesrc.dir}:${examplesrcgen.dir}"
               destdir="${exampleclass.dir}"
               classpath="${classpath}"
        />

        <!-- Create JAR file -->
        <mkdir dir="${lib.dir}" />
        <jar basedir="${exampleclass.dir}"
             destfile="${examplejar.file}"
        />
    </target>

    <!-- Build zip file of Eclipse project source -->
    <target name="zip-source" depends="init">
        <property name="staging.dir" value="${class.dir}/jSAL" />
        <property name="javadoc.dir" value="${staging.dir}/doc" />

        <!-- Clean destination directory -->
        <delete dir="${class.dir}" />
        <mkdir dir="${staging.dir}"/>

        <!-- Copy stuff we're going to zip -->
        <copy todir="${staging.dir}">
            <fileset dir=".">
                <include name="LICENSE" />
                <include name="${src.dir}/**/*.java"/>
                <include name="srcJavaExample/org/lsst/sal/example/*.java"/>
                <include name="build.xml" />
                <include name=".classpath" />
                <include name=".externalToolBuilders" />
                <include name=".project" />
                <include name=".settings" />
            </fileset>
        </copy>

        <!-- Build JavaDoc -->
        <javadoc sourcepath="${src.dir}"
                 destdir="${javadoc.dir}"
                 windowtitle="jSAL"
                 version="true"
                 use="true"
                 overview="${src.dir}/index.html"
                 failonerror="false"
        	     classpath="${classpath}">
        </javadoc>

        <!-- Zip it -->
        <mkdir dir="${lib.dir}" />
        <zip basedir="${class.dir}"
             includes="jSAL/**"
             destfile="${src.zipfile}"
             duplicate="fail"
             whenempty="fail"
        />
    </target>

    <!-- Build jar and zip files -->
    <target name="package-all" depends="build-jar, zip-source, build-example" />
</project>
